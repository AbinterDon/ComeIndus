<header id="tai">
    <div class="button">
        <a class="button btn btn-link btn-lg top-left" href="/content/UnivDepartment/">科系管理</a>
     </div>
    <div class="button">
        <a class="button btn btn-link btn-lg top-left-dwon" href="/content/MgtGraduation">畢業人數管理</a>
    </div>
    <div class="button">
        <a class="button btn btn-link btn-lg top" href="/content/UnivGraduation/DiffCountry">前往不同國比較>></a>
    </div>
    <div class="container sty1">
        <div class="title">
            <h2>Taiwan</h2>
        </div>
        <div class="years">

            <!--select裡的屬性須留著-->

            <select id="select1" class="sty taiyears" country="台灣" returnTo="chartdiv1" onchange="getData(this)">
                @foreach (var year in Model)
                {
                    <option value="@year.Year">@year.Year 年</option>
                }
            </select>
            <select id="select2" class="taiyears" country="台灣" returnTo="chartdiv2" onchange="getData(this)">
                @foreach (var year in Model)
                {
                    <option value="@year.Year">@year.Year 年</option>
                }
            </select>
        </div>
        <div class="box">
            <div class="chartdiv" id="chartdiv1"></div>
