<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iWebSite_ComeIndus</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />*@

    <!-- jQuery v1.9.1 -->
    @*<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>*@

    <!-- toastr v2.1.4 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Oswald:300,400,700'>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/vue/2.1.8/vue.js'></script>
    <script src="~/js/style.js" asp-append-version="true"></script>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top at_top">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button><img class="navbar-brand" src="https://i.postimg.cc/8cN0sfvh/comeindus-3.png" alt="" /><a class="navbar-brand" href="#header_index">各國產業發展比較平台</a>
            </div>
            <div class="navbar-collapse collapse" id="navbar">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#section_search">數據查詢</a></li>
                    <li><a href="/#section_new">最新消息<span class="sr-only">(current)</span></a></li>
                    <li><a asp-area="" asp-controller="Account" asp-action="Login">會員登入</a></li>
                    <li><a href="#section_contact">關於我們</a></li>
                    <li><a href="/#section_feedback">意見回饋</a></li>
                </ul>
            </div>
            <!-- /.nav-collapse-->
        </div>
    </nav>
    <div class="layout-container">
        <main role="main" class="layout-pb-3">
            @RenderBody()
        </main>
    </div>
    <footer id="footer">
        <div class="text">Copyright © ComeIndus. 2020</div>
        <div style="padding: 0px 0px;">
            &copy; 2020 - iWebSite_ComeIndus - This System Version is @iWebSite_ComeIndus.Helper.ConfigHelper.AppSettings.SystemVersion.
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
